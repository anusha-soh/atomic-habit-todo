# Required Environment Variables for Atomic Habits API
# Copy this file to .env and fill in the values

# PostgreSQL connection string (Neon Serverless recommended)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# JWT signing secret (generate a strong random string)
BETTER_AUTH_SECRET=your-secret-key-here

# Comma-separated CORS origins
# For local dev: http://localhost:3000
# For HF Spaces: https://your-space.hf.space
# For Vercel: https://your-app.vercel.app
ALLOWED_ORIGINS=http://localhost:3000

# Optional
LOG_LEVEL=info
JWT_EXPIRATION_DAYS=7

# Habit tracking - miss detection scheduler
# Set to false to disable APScheduler background job (useful for serverless environments)
ENABLE_SCHEDULER=true
