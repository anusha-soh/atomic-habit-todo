{
  "name": "atomic-habits-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Phase 2 Core Infrastructure - Atomic Habits Todo Application",
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:api": "cd apps/api && uvicorn src.main:app --reload --host 0.0.0.0 --port 8000",
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:api\"",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter web build",
    "test": "pnpm -r test",
    "test:web": "pnpm --filter web test",
    "test:api": "cd apps/api && pytest",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.8.0",
    "eslint": "^9.0.0",
    "prettier": "^3.2.5"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
